{
    "model": "llama3.1",
    "messages": [
        {
            "content": "Judge whether the input text has 'positive', 'neutral' or 'negative' sentiment. Answer with a JSON object with the sentiment and your confidence (between 0 and 1).",
            "role": "system"
        },
        {
            "content": "{{text}}",
            "role": "user"
        }
    ],
    "response_format": {
        "type": "json_schema",
        "json_schema": {
            "type": "object",
            "properties": {
                "sentiment": {
                    "enum": ["positive", "neutral", "negative"]
                },
                "confidence": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                }
            },
            "required": ["sentiment", "confidence"]
        }
    }
}